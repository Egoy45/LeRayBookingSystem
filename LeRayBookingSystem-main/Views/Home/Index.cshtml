@{
    ViewData["Title"] = "Home Page";
}

<!-- Message Box for Alerts -->
<div id="messageBox" class="fixed top-5 left-1/2 -translate-x-1/2 px-6 py-3 bg-brown-800 text-white rounded-lg shadow-xl z-50 transform scale-0 transition-transform duration-300">
    <p id="messageText"></p>
</div>

<!-- Hero Section -->
<section class="hero-section text-brown-900 flex items-center justify-center text-center py-20 md:py-32">
    <div class="p-8 md:p-12 rounded-lg max-w-2xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-extrabold leading-tight tracking-tight mb-4 text-brown-900">
            <span class="font-serif text-6xl">LE'RAY</span>
        </h1>
        <p class="text-lg md:text-xl font-light mb-6 text-brown-900">
            AESTHETIC AND WELLNESS CENTER
        </p>
        <a href="#booking-form" class="bg-brown-800 text-white px-8 py-4 text-lg font-semibold rounded-full hover:bg-brown-900 transition duration-300 shadow-lg">
            BOOK NOW
        </a>
    </div>
</section>

<!-- Booking Form Section -->
<section id="booking-form" class="py-16 md:py-24 bg-brown-100">
    <div class="container mx-auto px-4 md:px-8 max-w-4xl">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-10 text-brown-900">Book Your Appointment</h2>
        <div class="bg-white p-6 md:p-8 rounded-2xl shadow-lg border border-gray-100">
            <form class="space-y-6">
                <!-- Step 1: Choose a Service -->
                <div>
                    <label for="service" class="block text-lg font-medium text-brown-900 mb-2">1. Choose a Service</label>
                    <select id="service" name="service" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-brown-800 focus:border-brown-800 transition duration-300">
                        <option value="" disabled selected>Select a Service</option>
                        <option value="facial">Facial Services</option>
                        <option value="slimming">Slimming Treatments</option>
                        <option value="skin_treatment">Skin Treatments</option>
                        <option value="laser">Laser Hair Removal</option>
                        <option value="microneedling">Microneedling</option>
                        <option value="semi_permanent_makeup">Semi-Permanent Make Up</option>
                        <option value="combo_bundles">Combo Bundles</option>
                    </select>
                </div>

                <!-- Step 2: Select a Date -->
                <div>
                    <label for="date" class="block text-lg font-medium text-brown-900 mb-2">2. Select a Date</label>
                    <input type="date" id="date" name="date" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-brown-800 focus:border-brown-800 transition duration-300">
                </div>

                <!-- Step 3: Select a Time -->
                <div>
                    <label for="time" class="block text-lg font-medium text-brown-900 mb-2">3. Choose a Time</label>
                    <select id="time" name="time" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-brown-800 focus:border-brown-800 transition duration-300">
                        <option value="" disabled selected>Select a Time</option>
                    </select>
                </div>

                <!-- Step 4: Contact Information -->
                <div>
                    <h3 class="text-lg font-medium text-brown-900 mb-4">4. Your Details</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <input type="text" placeholder="Full Name" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-brown-800 focus:border-brown-800 transition duration-300">
                        <input type="email" placeholder="Email Address" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-brown-800 focus:border-brown-800 transition duration-300">
                        <input type="tel" placeholder="Phone Number" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-brown-800 focus:border-brown-800 transition duration-300 col-span-1 md:col-span-2">
                    </div>
                </div>

                <button type="submit" class="w-full bg-brown-800 text-white px-6 py-4 rounded-lg font-semibold text-lg hover:bg-brown-900 transition duration-300 shadow-lg">
                    Confirm Reservation
                </button>
            </form>
        </div>
    </div>
</section>

<!-- Combo Bundles Section -->
<section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-4 text-brown-900">Combo Bundles</h2>
        <div class="flex flex-wrap justify-center gap-8">
            <!-- Example card -->
            <div class="bg-gray-100 p-6 rounded-2xl shadow-md w-full md:w-1/3 lg:w-1/4">
                <img src="https://placehold.co/200x200/4A3A2D/EBE0D3?text=LASER+BUNDLE" alt="Laser Bundle" class="rounded-xl mx-auto mb-4">
                <h3 class="text-xl font-semibold mb-2">LASER BUNDLE</h3>
                <p class="text-sm text-gray-600 mb-2">PHP 1,599</p>
                <ul class="text-sm text-gray-700 text-left list-disc list-inside space-y-1">
                    <li>DEEP CLEANING FACIAL</li>
                    <li>PICO LASER (Any Body Parts)</li>
                    <li>POT LIGHT TREATMENT</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials Section -->
<section class="py-16 md:py-24 bg-brown-100">
    <div class="container mx-auto px-4 text-center max-w-4xl">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 text-brown-900">What Our Clients Say</h2>
        <div class="bg-white p-8 rounded-2xl shadow-lg">
            <div id="testimonial-carousel" class="relative">
                <div class="flex items-center justify-center space-x-4">
                    <button id="prev-testimonial" class="p-2 rounded-full bg-gray-200 hover:bg-gray-300 transition duration-300">←</button>
                    <div id="testimonial-content" class="text-center italic text-gray-700 max-w-2xl"></div>
                    <button id="next-testimonial" class="p-2 rounded-full bg-gray-200 hover:bg-gray-300 transition duration-300">→</button>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Message box
        function showMessageBox(message) {
            const messageBox = document.getElementById('messageBox');
            const messageText = document.getElementById('messageText');
            messageText.innerText = message;
            messageBox.style.transform = 'scale(1)';
            setTimeout(() => {
                messageBox.style.transform = 'scale(0)';
            }, 3000);
        }

        // Populate time slots
        const dateInput = document.getElementById('date');
        const timeSelect = document.getElementById('time');
        if (dateInput) {
            dateInput.addEventListener('change', () => {
                const slots = ['9:00 AM', '10:30 AM', '1:00 PM', '2:30 PM', '4:00 PM'];
                timeSelect.innerHTML = '<option disabled selected>Select a Time</option>';
                slots.forEach(t => {
                    const opt = document.createElement('option');
                    opt.value = t.replace(/\s/g, '');
                    opt.text = t;
                    timeSelect.appendChild(opt);
                });
            });
        }

        // Testimonials
        const testimonials = [
            { quote: "Amazing experience, warm staff, and professional service!", author: "Jane Doe" },
            { quote: "Affordable and effective treatments, highly recommend.", author: "Anna Smith" }
        ];
        let current = 0;
        const testimonialContent = document.getElementById('testimonial-content');
        function renderTestimonial() {
            testimonialContent.innerHTML = `
                <p>"${testimonials[current].quote}"</p>
                <p class="not-italic font-semibold mt-4 text-brown-900">- ${testimonials[current].author}</p>
                <div class="text-yellow-400 mt-2">★★★★★</div>
            `;
        }
        document.getElementById('prev-testimonial').addEventListener('click', () => {
            current = (current - 1 + testimonials.length) % testimonials.length;
            renderTestimonial();
        });
        document.getElementById('next-testimonial').addEventListener('click', () => {
            current = (current + 1) % testimonials.length;
            renderTestimonial();
        });
        renderTestimonial();
    </script>
}
