@model LeRayBookingSystem.Models.Promos

@{
    ViewData["Title"] = "Delete Promo";
}

<h2>Delete Promo</h2>

<h3>Are you sure you want to delete this promo?</h3>
<div>
    <h4>@Model?.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model?.Description</dd>

        <dt class="col-sm-2">Promo Code</dt>
        <dd class="col-sm-10">@Model?.PromoCode</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model?.StartDate.ToShortDateString()</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model?.EndDate.ToShortDateString()</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

