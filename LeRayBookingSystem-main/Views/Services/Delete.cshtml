@model LeRayBookingSystem.Models.Service

@{
    ViewData["Title"] = "Delete Service";
}

<h2>Delete Service</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Service</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Service Name</dt>
        <dd class="col-sm-10">@Model?.ServiceName ?? "N/A"</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model?.Description ?? "N/A"</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model?.Category ?? "N/A"</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model?.Price.ToString("C")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
