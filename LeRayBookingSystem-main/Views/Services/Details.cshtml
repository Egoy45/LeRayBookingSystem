@model LeRayBookingSystem.Models.Service

@{
    ViewData["Title"] = "Service Details";
}

<h2>Service Details</h2>

<dl class="row">
    <dt class="col-sm-2">Service Name</dt>
    <dd class="col-sm-10">@Model?.ServiceName ?? "N/A"</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model?.Description ?? "N/A"</dd>

    <dt class="col-sm-2">Category</dt>
    <dd class="col-sm-10">@Model?.Category ?? "N/A"</dd>

    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model?.Price.ToString("C")</dd>

    <dt class="col-sm-2">Duration</dt>
    <dd class="col-sm-10">@Model?.Duration</dd>

    <dt class="col-sm-2">Active</dt>
    <dd class="col-sm-10">@((Model?.IsActive ?? false) ? "Yes" : "No")</dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>
