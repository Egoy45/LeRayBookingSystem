@model LeRayBookingSystem.Models.Feedback

@{
    ViewData["Title"] = "Delete Feedback";
}

<h1>Delete Feedback</h1>

<h4 class="text-danger">Are you sure you want to delete this feedback?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Description)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Description)
    </dd>

    <dt class="col-sm-2">
        Submitted By
    </dt>
    <dd class="col-sm-10">
        @if (Model.User != null && !string.IsNullOrWhiteSpace(Model.User.FullName))
        {
            @Model.User.FullName
        }
        else
        {
            <span class="text-muted">User not found</span>
        }
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.CreatedAt)
    </dt>
    <dd class="col-sm-10">
        @Model.CreatedAt.ToString("f")
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.UpdatedAt)
    </dt>
    <dd class="col-sm-10">
        @Model.UpdatedAt.ToString("f")
    </dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
