@model IEnumerable<LeRayBookingSystem.Models.Promos>

@{
    ViewData["Title"] = "Index";
}

<h1>Promos</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.Duration)</th>
            <th>@Html.DisplayNameFor(model => model.PromoCode)</th>
            <th>@Html.DisplayNameFor(model => model.StartDate)</th>
            <th>@Html.DisplayNameFor(model => model.EndDate)</th>
            <th>@Html.DisplayNameFor(model => model.IsActive)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedByUser)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(_ => item.Title)</td>
                <td>@Html.DisplayFor(_ => item.Description)</td>
                <td>@Html.DisplayFor(_ => item.Price)</td>
                <td>@Html.DisplayFor(_ => item.Duration)</td>
                <td>@Html.DisplayFor(_ => item.PromoCode)</td>
                <td>@Html.DisplayFor(_ => item.StartDate)</td>
                <td>@Html.DisplayFor(_ => item.EndDate)</td>
                <td>@Html.DisplayFor(_ => item.IsActive)</td>
                <td>@(item.CreatedByUser?.FullName ?? "N/A")</td>
                <td>@Html.DisplayFor(_ => item.CreatedAt)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
