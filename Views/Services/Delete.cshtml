@model LeRayBookingSystem.Models.Service

@{
    ViewData["Title"] = "Delete Service";
}

<h1 class="text-danger">Delete Service</h1>

<h4 class="text-warning">Are you sure you want to delete this?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-3">Title</dt>
    <dd class="col-sm-9">@Model.Title</dd>

    <dt class="col-sm-3">Description</dt>
    <dd class="col-sm-9">@Model.Description</dd>

    <dt class="col-sm-3">Price</dt>
    <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

    <dt class="col-sm-3">Duration</dt>
    <dd class="col-sm-9">@Model.Duration</dd>

    <dt class="col-sm-3">Created By</dt>
    <dd class="col-sm-9">@Model.CreatedByUser?.FullName</dd>

    <dt class="col-sm-3">Created At</dt>
    <dd class="col-sm-9">@Model.CreatedAt.ToString("g")</dd>

    <dt class="col-sm-3">Updated By</dt>
    <dd class="col-sm-9">@Model.UpdatedByUser?.FullName</dd>

    <dt class="col-sm-3">Last Updated By</dt>
    <dd class="col-sm-9">@Model.LastUpdatedByUser?.FullName</dd>

    <dt class="col-sm-3">Last Updated At</dt>
    <dd class="col-sm-9">@Model.LastUpdatedAt.ToString("g")</dd>

    <dt class="col-sm-3">Public Code</dt>
    <dd class="col-sm-9">@Model.PublicServiceCode</dd>

    <dt class="col-sm-3">Service Name</dt>
    <dd class="col-sm-9">@Model.ServiceName</dd>

    <dt class="col-sm-3">Image</dt>
    <dd class="col-sm-9">
        @if (!string.IsNullOrWhiteSpace(Model.ImagePath))
        {
            <img src="@Model.ImagePath" alt="@Model.ServiceName" style="max-width: 200px;" />
        }
        else
        {
            <span>No image available</span>
        }
    </dd>

    <dt class="col-sm-3">Category</dt>
    <dd class="col-sm-9">@Model.Category</dd>

    <dt class="col-sm-3">Is Active</dt>
    <dd class="col-sm-9">@((Model.IsActive) ? "Yes" : "No")</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
